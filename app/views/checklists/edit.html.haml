= provide :title, "編集"

.container
  .panel.panel-default
    .panel-heading.text-center
      %h4 チェックリスト編集
    .panel-body
      = form_for @checklist do |f|
        .row
          .col-xs-12.form-group
            = f.label :name, 'リスト名'
            = f.text_field :name, class: 'form-control'
        .row
          .col-xs-6
            = f.label :maker, 'リスト作成者'
          .col-xs-6
            = f.label :image, 'イメージ画像'
        .row
          .col-xs-6.form-group
            = f.text_field :maker, class: 'form-control'
          .col-xs-6.form-group
            = f.file_field :image

        .row.form-group
          .col-xs-12.form-group
            = f.label :frequency, 'チェック頻度'
            .form-group
              = f.select :frequency, Settings.frequency
        .row
          .col-xs-12.form-group#wday
            = f.label :days, '曜日'
            .form-group
              %span 毎週
              = f.select :wday, Settings.wday, value: @checklist.wday
              %span 曜日
        .row
          .col-xs-12.form-group#date
            = f.label :date, '日付'
            .form-group
              %span 毎月
              = f.select :date, Settings.month_days, value: @checklist.date
              %span 日
        .row
          .contents_area
            .form-group.panel.panel-default.check_group_panel#check_group_edit
              .row.check_group
                .col-xs-2.form-group
                  = f.label :title, 'チェック項目作成'
                .col-xs-2.col-xs-offset-2.form-group
                  %input{ type: 'button', class: 'btn btn-default add_button', value: '項目追加' }
              = f.fields_for :contents do |content|
                .row.content_field
                  .col-xs-7.content_input
                    = content.text_field :text, class: 'form-control', placeholder: '追加したいチェック項目を入力してください'
                  .col-xs-3.form-group.tag_input
                    = text_field_tag 'content[tag_list][]', '', placeholder: 'グループを入力', value: content.object.tag_list.first
                  .col-xs-2.button_area.text-left
                    %input{ type: 'button', class: 'btn btn-default remove_button', value: '削除' }
        %br
        .row
          .col-xs-2.col-xs-offset-5
            %br
            = hidden_field_tag :checkflag, 'edit_checklist'
            = button_tag '作成', type: 'submit', class: 'btn btn-primary'
