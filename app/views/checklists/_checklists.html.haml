.panel.panel-default
  .panel-body
    .col-xs-1.col-md-1
      = check_new(checklist)
      = image_tag checklist.check_status, size: '40x40', id: checklist.deside_id
    .col-xs-8.col-xs-offset-1.col-md-3.col-md-offset-1
      = link_to image_tag(show_image(checklist), class: "img-rounded img-responsive"), checklist_path(checklist)
    .col-xs-12.col-md-6.text-center
      %h3
        = link_to checklist.name, checklist_path(checklist)
      %br
      %h5
        %span 作成日:
        = checklist.created_at.strftime("%y年%m月%e日")
      %h5
        %span 作成者:
        = checklist.maker